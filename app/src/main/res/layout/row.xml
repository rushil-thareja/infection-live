<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/box_blue"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
    >

<!--    <ImageView-->
<!--        android:id="@+id/imageView"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_weight="10"-->

<!--        android:background="@drawable/ic_pin" />-->
    <TextView
        android:id="@+id/txt_state"
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:textSize="18sp"
         android:textAlignment="center"

        android:textColor="@color/white"
        />



</LinearLayout>
    <TextView
        android:id="@+id/txt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:text="total :"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"

        android:layout_marginTop="5dp"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="25"
        android:weightSum="100"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/indiakiimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ic_india" />
        <TextView
            android:id="@+id/txt_indian"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"

        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/bahar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ic_world" />
        <TextView
            android:id="@+id/txt_foreign"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"

        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/sahi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ic_h_green" />
        <TextView
            android:id="@+id/txt_recovered"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"

        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/dead"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ic_skull" />
        <TextView
            android:id="@+id/txt_deaths"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            />


    </LinearLayout>
    </LinearLayout>






</LinearLayout>